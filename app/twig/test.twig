{% extends "layouts/app.twig" %}

{% block pageTitle %} Тест {% endblock %}


{% block content %}
    <div class="site-wrapper">
        <header class="header">
            <div class="container">
                <div class="header__navbar navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="header__logo logo" href="#">
                        <img class="logo__image" src="images/logo-white.png" alt="">
                    </a>
                </div>

                <div id="navbar" class="navbar-collapse collapse" aria-expanded="false">
                    <div class="header__flex">
                        <div class="header__flex-item">
                            <ul class="header__language language">
                                <li><a href="#">Қаз</a></li>
                                <li><a href="#">Рус</a></li>
                            </ul>
                            <a class="header__phone phone" href="#">8 777 666-55-44</a>
                        </div>
                        <div class="header__flex-item">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="#">О сайте</a></li>
                                <li><a href="#">НПА</a></li>
                                <li><a href="#">Новости</a></li>
                                <li><a href="#">Контакты</a></li>
                                <li><a href="#">Оплата</a></li>
                                <li><a href="#">Регистрация</a></li>
                                <li><a href="#">Войти</a></li>
                            </ul>
                            <ul class="soc">
                                <li>
                                    <a class="icon-vk" href="#"></a>
                                </li>
                                <li>
                                    <a class="icon-mail" href="#"></a>
                                </li>
                                <li>
                                    <a class="icon-fb" href="#"></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <main class="main">
            <section class="section">
                <div class="container">
                    <div class="section__title">ТЕСТИРОВАНИЕ НА ПРОФПРИГОДНОСТЬ</div>
                    <div class="test">
                        <div class="test__numbers ">
                            <div class="test-numbers">
                                {% for i in 0..48 %}
                                    <a class="test-numbers__item" href="#"></a>
                                {% endfor %}
                                <a class="test-numbers__item active" href="#"></a>
                            </div>
                        </div>
                        <div class="test__questions questions">
                            <div class="questions__title">Вопрос 1 из 50</div>
                            <div class="questions__descr">Проводится ли подготовка перед тестированием на профпригодность?</div>
                            <div class="questions__form questions-form">
                                <div class="questions-form__button">
                                    <input class="questions-form__radio" name="question1" type="radio">
                                    <div class="questions-form__button-content">Да</div>
                                </div>
                                <div class="questions-form__button">
                                    <input class="questions-form__radio" name="question1" type="radio">
                                    <div class="questions-form__button-content">Нет</div>
                                </div>
                                <div class="questions-form__button">
                                    <input class="questions-form__radio" name="question1" type="radio">
                                    <div class="questions-form__button-content">Не знаю</div>
                                </div>
                            </div>
                            <div class="questions__buttons">
                                <a href="#" class="btn btn-primary btn-details btn-prev">
                                    <span class="btn-prev__content">Предыдущий</span>
                                </a>
                                <a href="#" class="btn btn-primary btn-details btn-next">
                                    <span class="btn-next__content">Следующий</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </main>
        <footer class="footer">
            <div class="container">
                <div class="footer__container">
                    <div class="footer__left">
                        <a class="footer__logo logo" href="#">
                            <img class="logo__image" src="images/logo-white.png" alt="">
                            <p class="footer__copy">Все права защищены</p>
                        </a>
                        <a class="footer__phone phone" href="#">8 777 666-55-44</a>
                        <div class="footer__contacts footer-contacts">
                            <p class="footer-contacts__title">Контакты</p>
                            <p class="footer-contacts__text">Республика Казахстан, г. Алматы ул. Пушкина, 18, оф.5</p>
                        </div>
                    </div>
                    <div class="footer__right">
                        <ul class="footer__soc soc">
                            <li>
                                <a class="icon-vk" href="#"></a>
                            </li>
                            <li>
                                <a class="icon-mail" href="#"></a>
                            </li>
                            <li>
                                <a class="icon-fb" href="#"></a>
                            </li>
                        </ul>
                        <div class="footer__statistics"></div>
                    </div>
                </div>

            </div>
        </footer>
    </div>
{% endblock %}